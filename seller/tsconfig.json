{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "./",
        "esModuleInterop": true
    },
    "include": [
        "app",
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.spec.ts",
        "**/__tests__/*",
        "**/__test_helpers__/**",
        "**/WIP/**"
    ]
}